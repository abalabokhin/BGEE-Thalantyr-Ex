        SAY NAME2 @80000
        SAY IDENTIFIED_DESC @80001
        WRITE_LONG 0x34 9000                    // Price
        WRITE_ASCII_TERMINATE 0x3A "BZAM14BI"   // Icon
        WRITE_LONG 0x42 70                      // Lore to Identify
